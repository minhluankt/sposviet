@using Domain.Entities
@model CategoryCevenue
<div class="row">
    <div class="col-md-12">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

      

         <div class="fromOnetable">
            <div class="form-group">
                <label class="control-label">Mã</label>
                <input asp-for="Code" class="form-control" placeholder="Mã nguồn thu sinh tự động" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
        </div>
        <div class="fromOnetable">
            <div class="form-group">
                <label class="control-label">Tên <span class="required">(*)</span></label>
                <input asp-for="Name" class="form-control" placeholder="Tên nguồn thu" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Mô tả</label>
            <textarea asp-for="Content" class="form-control" placeholder="Mô tả thêm"></textarea>
        </div>
    </div>
</div>
