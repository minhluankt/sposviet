@using Microsoft.AspNetCore.Mvc.Localization
@using Domain.Entities
@using Application.Enums
@model Customer

<style>
    .bg-secondary {
        background-color: #f7fafc !important;
    }

    .form-control-alternative {
        transition: box-shadow .15s ease;
        border: 0;
        box-shadow: 0 1px 3px rgb(50 50 93 / 15%), 0 1px 0 rgb(0 0 0 / 2%);
    }
</style>
<div class="col-xl-3 pl-md-0 d-none d-lg-block">
    <div class="card card-profile shadow">
        <div class="row justify-content-center">
            <div class="col-lg-3 order-lg-2">
                <div class="card-profile-image">
                    <a href="#">
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            if (!Model.Image.Contains("~"))
                            {
                                <img src="data:image/png;base64,@Model.Image" class="rounded-circle" />
                            }
                            else
                            {
                                <img src="@Model.Image" class="rounded-circle" />
                            }
                        }
                        else
                        {
                            <img src="~/images/avata/user.png" class="rounded-circle" />

                        }
                    </a>
                </div>
            </div>
        </div>
        <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4" style="background-color:#fff;">
            <div class="d-flex justify-content-between">
            </div>
        </div>
        <div class="card-body pt-0 pt-md-4">
            <div class="row">
                <div class="col">
                    <div class="card-profile-stats d-flex justify-content-center mt-md-5">
                    </div>
                </div>
            </div>
            <div class="text-center ">
                <h3>
                    @Model.Name
                </h3>
                <div class="h5 font-weight-300" style="width: max-content; margin: auto;">
                    <span class="icon-birthday icon-cd"></span>@if (Model.BirthDate != null)
                    {
                        <span>@Model.BirthDate.Value.ToString("dd/MM/yyyy")</span>
                    }
                </div>

                <hr class="my-4">
                <ul class="menu-info-user">
                    <li>
                        <a class="dropdown-item" href="/tai-khoan-cua-toi"> <span class="icon-user icon-cd icon"></span> Thông tin tài khoản</a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="/quan-ly-don-hang"><span class="icon-list icon-cd icon"></span> Đơn hàng của tôi</a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="/thong-bao-cua-toi"><span class="icon-notif icon-cd icon"></span> Thông báo của tôi <b id="count-notify">(0)</b></a>
                    </li>

                    <li>
                        <a class="dropdown-item" href="/doi-mat-khau"><span class="icon-lock icon-cd icon"></span> Đổi mật khẩu</a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="/Account/Logout"><span class="icon-logout icon-cd icon"></span> Đăng xuất</a>
                    </li>

                </ul>
                <hr class="my-4">
                <ul class="pl-0 ml-0">
                    <li>
                        <span>Đăng nhập cuối: @Model.LoginLast.Value.ToString("dd/MM/yyyy HH:mm:ss")</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>