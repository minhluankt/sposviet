@model Domain.ViewModel.KitChenTableModel
<div class="body-dataContent">

    @if (Model.KitChenTableListModels.Count() > 0)
    {
        <ul class="list-item-table-food">
            @foreach (var item in Model.KitChenTableListModels)
            {
                <li>
                    <b class="header-li">@item.tableName (<span class="number3">@item.quantity</span>) <time class="creareDatetable">@item.TimeSpan</time></b>
                    <div class="body-item">
                        <ul class="list-item-food">
                            @foreach (var food in item.OrderDetailByOrders)
                            {
                                <li 
                                    data-id="@food.IdIntChitKen" 
                                data-idguid="@food.IdChitKen"
                                    data-idstaff="@food.idStaff"
                                class="@(food.Status==Application.Enums.EnumStatusKitchenOrder.Processing?"Processing":"")">
                                    @food.proName <span class="red">(<b class="number3">@food.quantity</b>)</span><br />
                                    <i class="note">
                                        @food.Note
                                    </i>
                                </li>
                            }
                        </ul>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <div class="sposvietbackgroud">
            <span class="bgnen"></span>
            <p>Chưa có món cần chế biến</p>
        </div>
    }

    <ul class="list-order-food">
        <li class="header-right">Thống kê món</li>
        @foreach (var item in Model.OrderByFoodModels)
        {
            <li class="">
                <div class="body-food">
                    @item.proName (<span class="number3">@item.quantity</span>)<br />
                    <i class="note">
                        @item.note
                    </i>
                </div>
                <button class="btn" data-idproduct="@item.idProduct" data-quantity="@item.quantity">
                    <i class="fas fa-check-circle"></i>
                </button>
            </li>
        }
    </ul>

</div>