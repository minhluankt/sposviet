@model Web.ManagerApplication.Models.PostViewModel

<div class="container pl-0 pr-0 mt-3 detail-post">
    <div class="row">
        <div class="col-md-3">

            <div class="body left-ct">
                <div class="card">
                    <div class="sidebar">
                        <h4>@Model.Post.CategoryPost.Name</h4>
                        <div class="list-category">
                            <ul class="loading-animated-list">
                                @for (var i = 0; i < 20; i++)
                                {
                                    <li class="text fade-loading-animated" style="width: 100%;"></li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="">
                <div class="card">
                    <div class="card-body">
                        <div class="header-content">
                            <h1>@Model.Post.Name</h1>
                            <i class="fas fa-eye"></i> @Model.Post.ViewNumber

                        </div>
                        <div class="body-content">
                            @Html.Raw(Model.Post.Decription)
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="card-body list-post-related">
                        <h4><i class="fas fa-book"></i>Bài viết cùng chuyên mục</h4>
                        <div class="lst-item">
                            <ul>

                                @foreach (var item in Model.PostsQuery)
                                {
                                    <li>
                                        <a href="/@item.Slug">
                                            <img src="/@item.Img" />
                                            <div class="detail">
                                                <h3>@item.Name</h3>
                                                <small><i class="fas fa-eye"></i> @item.ViewNumber</small>
                                            </div>

                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="body right-ct">
                <div class="card">
                    <div class="card-body list-post-new">
                        <h4><i class="fas fa-book"></i>Tin tức xem nhiều nhất</h4>
                        <div class="lst-item">
                            <ul>
                                @{
                                    int j = 1;
                                }
                                @foreach (var item in Model.ListPost)
                                {
                                    <li><span>#@(j++)</span><a href="/@item.Slug"> @item.Name</a></li>
                                }
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
<script>
    loadCategoryPostIn("@(Model.Post.CategoryPost.Id)");
    loadevent.eventScrollPostCategory();
</script>
}
