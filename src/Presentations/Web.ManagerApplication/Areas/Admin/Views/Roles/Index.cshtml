@{ ViewData["Title"] = localizer["Roles"];
                ViewData["Caption"] = localizer["Manage Roles here"]; }
<div class="card">
    <div class="card-header">
        <h5 class="font-weight-bold mt-0 mb-0">Danh sách nhóm quyền</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-12" style="padding:20px">
                <a onclick="jQueryModalGet('/admin/roles/OnGetCreateOrEdit','Create Role')" class="btn bg-success text-white">
                    <i class="fa fa-plus-square"></i> Create
                </a>
                <a id="reload" class="btn btn-primary text-white">
                    <i class="fa fas fa-bolt"></i>
                    Reload
                </a>
            </div>
            <div id="viewAll" class="card-body table-responsive">
            </div>
            </div>
            </div>
        </div>
        @section Scripts
{
            <script>
    $(document).ready(function () {
                    $("#roleTable").DataTable();
                    loadData();
                    $('#reload').on('click', function () {
                        loadData();
                    });
                });
                function loadData() {
                    loadDataAjax("/admin/roles/LoadAll");

                }</script>
        }
