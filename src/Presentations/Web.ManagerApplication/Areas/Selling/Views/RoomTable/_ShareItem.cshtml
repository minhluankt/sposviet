@using Domain.Entities
@model RoomAndTable
@{
    Layout = null;
}<style>
     .swal2-container {
         z-index: 30 !important;
     }
</style>
<div class="row" id="form-createtable">
    <div class="col-md-12">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group" style="
            display: flex;
            align-items: center;
        ">
            <label asp-for="IsCreateMuti" class="control-label" style="margin-bottom:0px">Tạo nhiều bàn/phòng</label>
            <input asp-for="IsCreateMuti" style="width:25px;height:25px; margin-left:15px" />
        </div>

        <div class="">
            <div class="form-group">
                <label class="control-label">Khu vực <span class="required">(*)</span></label>
                @Html.DropDownList("IdArea", (List<SelectListItem>)ViewBag.SelectList,  new { @style = "width:100%" ,@class="SelectListArea"} )
                @*<select class="select2 form-control" style="width:100%" asp-for="IdArea" asp-items="@new SelectList(ViewBag.SelectList,Model.IdArea)"></select>*@

            </div>
        </div>
        <div class="fromOnetable">
            <div class="form-group">
                <label class="control-label">Tên bàn/phòng <span class="required">(*)</span></label>
                <input asp-for="Name" class="form-control" placeholder="Tên bàn/phòng" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="fromMutitable d-none">
            <div class="form-group">
                <label class="control-label">Chọn loại bàn/phòng <span class="required">(*)</span></label><br />
                <select class="form-control" name="NameSelect" id="NameSelect" required>
                    <option value="Bàn" selected>Bàn</option>
                    <option value="Phòng">Phòng</option>
                    <option value="Vip">Vip</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Từ phòng/bàn<span class="required">(*)</span></label>
                <input asp-for="Fromno" type="hidden" class="form-control" placeholder="Từ" required />
            </div>
            <div class="form-group">
                <label class="control-label">Đến phòng/bàn<span class="required">(*)</span></label>
                <input asp-for="Tono" type="hidden" class="form-control" placeholder="Đến" required />
            </div>
        </div>



        <div class="form-group">
            <label asp-for="NumberSeats" class="control-label">Số ghế</label>
            <input asp-for="NumberSeats" class="form-control" placeholder="Số ghế" />
            <span asp-validation-for="NumberSeats" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="STT" class="control-label">Thứ tự hiển thị</label>
            <input asp-for="STT" class="form-control" placeholder="Thứ tự hiển thị" />
            <span asp-validation-for="STT" class="text-danger"></span>
        </div>
        <div class="form-group" style="
    display: flex;
    align-items: center;
">
            <label asp-for="Active" class="control-label" style="margin-bottom:0px">Hiển thị bàn lên quầy</label>
            <input asp-for="Active" style="width:25px;height:25px; margin-left:15px" />
            <span asp-validation-for="Active" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Ghi chú</label>
            <textarea asp-for="Note" class="form-control" placeholder="Ghi chú"></textarea>
        </div>
    </div>
</div>
