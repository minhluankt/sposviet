@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
@*@using Web.BDSCore.Views.Shared.Components.Culture;*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewData["Title"]</title>
    <partial name="_Styles" />
    <style>
        .bg-soft-primary {
            background-color: rgba(85,110,230,.25) !important;
        }
		.bg-plum-plate {
			background-image: url(/images/window10.png) !important;
			background-size: cover;
		}
        .profile-user-wid {
            margin-top: -26px;
        }

        .avatar-md {
            height: 4.5rem;
            width: 4.5rem;
        }

        .avatar-title {
            -webkit-box-align: center;
            -ms-flex-align: center;
            align-items: center;
            background-color: #556ee6;
            color: #fff;
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            font-weight: 500;
            height: 100%;
            -webkit-box-pack: center;
            -ms-flex-pack: center;
            justify-content: center;
            width: 100%;
        }
    </style>
</head>
<body>

    <div class="app-container app-theme-white body-tabs-shadow">
        <div class="app-container">
            <div class="h-100 bg-plum-plate bg-animation">
                <div class="d-flex h-100 justify-content-center align-items-center container">
                    <div class="mx-auto app-login-box col-md-5">
                        @*<div class="app-logo-inverse mx-auto mb-3"></div>*@
                        <h3 style="
    TEXT-ALIGN: center;
    color: #fff;
    font-weight: bold;
">
                            HỆ THỐNG QUẢN TRỊ
                        </h3>
                        <div class="modal-dialog w-100 mx-auto">

                            <div class="modal-content">
                                <div class="modal-body p-0">
                                    @*<div class="h5 modal-title text-center">
                                        <h4 class="mt-2">
                                        <div> HỆ THỐNG QUẢN TRỊ</div>
                                        <span>Đăng nhập hệ thống</span>
                                        </h4>
                                        </div>*@
                                    <div class="bg-soft-primary">
                                        <div class="row">
                                            <div class="col-7">
                                                <div class="text-primary p-4">
                                                    <p>Đăng nhập hệ thống</p>
                                                </div>
                                            </div>
                                            <div class="col-5 align-self-end">
                                                <img src="~/assets/images/profile-img-login.png" class="img-fluid" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-body pt-0">
                                        <div>
                                            <a href="#">
                                                <div class="avatar-md profile-user-wid mb-4">
                                                    <span class="avatar-title rounded-circle bg-light">
                                                        <img src="~/images/logo1.png" alt="" class="rounded-circle" height="34">
                                                    </span>
                                                </div>
                                            </a>
                                        </div>
                                        <form id="account" method="post" class="needs-validation form-horizontal" novalidate>
                                            @Html.ValidationSummary(true)
                                            <div class="">

                                                <div class="position-relative form-group">
                                                    <label>Tên đăng nhập</label>
                                                    <input asp-for="Input.UserName" type="text" class="form-control form-control-user"
                                                           required id="UserName" aria-describedby="emailHelp" placeholder="Nhập username hoặc email...">
                                                    <div class="invalid-feedback">
                                                        Vui nhập nhập tên đăng nhập
                                                    </div>
                                                </div>


                                                <div class="position-relative form-group">
                                                    <label>Mật khẩu</label>
                                                    <input asp-for="Input.Password" type="password" class="form-control form-control-user" required id="Password" placeholder="Nhập mật khẩu">
                                                    <div class="invalid-feedback">
                                                        Vui nhập nhập mật khẩu
                                                    </div>
                                                </div>

                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" asp-for="Input.RememberMe" class="custom-control-input" id="customControlInline">
                                                    <label class="custom-control-label" for="customControlInline">Ghi nhớ</label>
                                                </div>

                                                <div class="text-center mt-3" id="btnactionlogin">
                                                    <button class="ladda-button mb-2 mr-2 btn btn-primary btn-block waves-effect waves-light" data-style="expand-left">
                                                        <span class="ladda-label">Đăng nhập</span>

                                                        <span class="ladda-spinner"></span><div class="ladda-progress" style="width: 0px;"></div>
                                                    </button>

                                                </div>
                                            </div>
                                        </form>

                                    </div>

                                </div>
                                @*<div class="modal-footer clearfix">

                                    </div>*@
                            </div>

                        </div>
                        <div class="text-center text-white opacity-8 mt-3">Copyright © SposViet 2021</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Example starter JavaScript for disabling form submissions if there are invalid fields
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                // Fetch all the forms we want to apply custom Bootstrap validation styles to
                var forms = document.getElementsByClassName('needs-validation');
                // Loop over them and prevent submission
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
        
    </script>

  @*  <partial name="_Scripts" />*@
    <script src="~/lib/jquery/jquery.min.js"></script>
    @await Component.InvokeAsync("Notyf")
</body>
</html>











