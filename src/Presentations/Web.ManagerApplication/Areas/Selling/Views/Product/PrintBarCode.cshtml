@using Application.Hepers
@using X.PagedList
@model List<Domain.Entities.Product>
@{
	Layout = null;
	var split = Application.Hepers.Common.SplitList(Model,2);
	int i = 0;
}
<body style="margin:0px">

@foreach (var pros in split)
{
		i++;
		var pro = pros.ToArray();
		<table style="width: 100%;height: 100%;">
			<tbody>
				<tr style="width: 100%;">
				@if (pros.Count()==2)
				{
					<td style="text-align: center; width:50%">
							<div style=" display: flex;  flex-direction: column;text-align: center;    align-items: center;">
							<span style="font-size:11px;margin-bottom:2px;">@pro[0].Name</span>
								<img style="width:100px; height:20px" src="@pro[0].base64" />
							<span style="font-size:10px;">@pro[0].Code</span>
							<b style="font-size:12px;">@(pro[0].Price.ToString("N0"))đ</b>
						</div>
					</td>
					<td style="text-align: center; padding-left:10px; width:50%">
							<div style=" display: flex;  flex-direction: column;text-align: center;    align-items: center;">
							<span style="font-size:11px;margin-bottom:2px;">@pro[1].Name</span>
								<img style="width:100px; height:20px" src="@pro[1].base64" />
							<span style="font-size:10px;">@pro[1].Code</span>
							<b style="font-size:12px;">@(pro[1].Price.ToString("N0"))đ</b>
						</div>
					</td>
				}
				else
				{
					<td style="text-align: center; width:50%">
							<div style=" display: flex;  flex-direction: column;text-align: center;    align-items: center;">
							<span style="font-size:11px;margin-bottom:2px;">@pro[0].Name</span>
								<img style="width:100px; height:20px" src="@pro[0].base64"/>
							<span style="font-size:10px;">@pro[0].Code</span>
							<b style="font-size:12px;">@(pro[0].Price.ToString("N0"))đ</b>
						</div>
					</td>
					<td style="text-align: center; padding-left:10px; padding-right:3px; width:50%">
						
					</td>
				}
				</tr>
			</tbody>
	</table>
		@if (i < split.Count())
		{
			<div class="pagebreak" style=" page-break-before: always;"> </div>
		}
	
}
</body>