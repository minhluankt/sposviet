@using Domain.Entities
@model Area
<div class="row">
    <div class="col-md-12">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="fromOnetable">
            <div class="form-group">
                <label class="control-label">Tên khu vực <span class="required">(*)</span></label>
                <input asp-for="Name" class="form-control" placeholder="Tên bàn/phòng" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group" style="
    display: flex;
    align-items: center;
">
            <label asp-for="Active" class="control-label" style="margin-bottom:0px">Kích họat</label>
            <input asp-for="Active" style="width:25px;height:25px; margin-left:15px" />
            <span asp-validation-for="Active" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Ghi chú</label>
            <textarea asp-for="Note" class="form-control" placeholder="Ghi chú"></textarea>
        </div>
    </div>
</div>
