@using Domain.Entities
@model Permission
    <div class="row">
        <div class="col-md-4">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" placeholder="Mã quyền" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"  placeholder="Tên quyền" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
                    <button type="submit" class="btn btn-dark close-button" data-dismiss="modal"> <i class="fas fa-close"></i> Cancel</button>
                    <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Lưu</button>
                </div>
            
        </div>
    </div>
