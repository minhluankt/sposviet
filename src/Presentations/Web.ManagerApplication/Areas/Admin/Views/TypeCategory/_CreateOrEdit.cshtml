@using Web.ManagerApplication.Areas.Admin.Models.Categorys
@model TypeCategoryViewModel
<form method="post" asp-controller="TypeCategory" asp-area="Admin" asp-route-id="@Model.Id" asp-action="OnPostCreateOrEdit" onsubmit="return jQueryModalPost(this);">
    <div class="row justify-content-center">
        <div class="col col-md-6">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" placeholder="Nhập tên loại danh mục" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="View" class="control-label"></label>
                <input asp-for="View" placeholder="Nhập view" class="form-control" />
                <span asp-validation-for="View" class="text-danger"></span>
            </div>

            <div class="form-group justify-content-center" style="margin-bottom: 0px !important">
                <button class="ladda-button mr-2 btn btn-primary" data-style="expand-left">
                    <span class="ladda-label"><i class="fas fa-check"></i>  Lưu</span>
                    <span class="ladda-spinner"></span>
                </button>
                <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</form>
