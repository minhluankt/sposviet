@using Domain.Entities
@model AutoSendTimer

<form id="create-form" class="formAutoTimer" method="post" asp-controller="AutoTimer" asp-action="OnPostCreateOrEdit" onsubmit="return jQueryModalPost(this);">
    @Html.HiddenFor(x=>x.Id)
    @Html.HiddenFor(x=>x.TypeSupplierEInvoice)
    <div class="row">
        <div class="col-md-6">
            <div class="formAddSupplierEInvoice">
                <div class="form-group">
                    <label for="exampleInputPassword1">Tên chương trình</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Tên chương trình">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Thời gian bắt đầu</label>
                    <div class="input-group mb-2 col-md-6 pl-0">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-clock"></i></div>
                        </div>
                        <input type="text" readonly class="form-control timepicker" name="Time" id="Time" placeholder="Thời gian bắt đầu">
                    </div>
                </div>
                <div class="form-group" style="display:flex;align-items:center">
                    <label class="mb-0 mr-3" for="exampleInputPassword1">Kích hoạt hệ thống</label>
                    <input class="form-control icheck " asp-for="Active">
                </div>
            </div>
        </div>
        <div class="col-md-6">

            <div class="ele-patern">
                <fieldset>
                    <legend>Lựa chọn mẫu số và ký hiệu</legend>
                    <div class="content">
                        <div class="selectall">
                            Chọn tất cả: <input type="checkbox" class="icheck checkAll" />
                        </div>
                        <ul class="list-pattern">
                           
                                @foreach (var item in Model.ManagerPatternEInvoices)
                            {
                                <li>
                                    <input type="checkbox" name="pattern[]" class="icheck itemcheck" value="@item.Id" @(item.Selected?"checked":"") />
                                    <span>@item.Pattern - @item.Serial</span>
                                </li>
                                }
                            
                        </ul>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
</form>
