@using Domain.Entities
@model BankAccount
<div class="row">
    <div class="col-md-12">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.BinVietQR)
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="">
            <div class="form-group">
                <label class="control-label">Ngân hàng<span class="required">(*)</span></label>
                <select id="selectAccountName" name="codebank" class="form-control" placeholder="Tên ngân hàng" required  style="width:100%">
                    <option></option>
                </select>
            </div>
        </div>
         <div class="fromOnetable">
            <div class="form-group">
                <label class="control-label">Số tài khoản <span class="required">(*)</span></label>
                <input asp-for="BankNumber" class="form-control" placeholder="Số tài khoản" required />
                <span asp-validation-for="BankNumber" class="text-danger"></span>
            </div>
        </div>

        <div class="fromOnetable">
            <div class="form-group">
                <label class="control-label">Người thụ hưởng <span class="required">(*)</span></label>
                <input asp-for="AccountName" class="form-control" placeholder="Người thụ hưởng" required />
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>
        </div>

        <div class="fromOnetable">
            <div class="form-group">
                <label class="control-label">Địa chỉ ngân hàng</label>
                <input asp-for="BankAddress" class="form-control" placeholder="Địa chỉ ngân hàng" />
                <span asp-validation-for="BankAddress" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group" style="
            display: flex;
            align-items: center;
        ">
            <label asp-for="IsSetDefault" class="control-label" style="margin-bottom:0px">Sử dụng làm mặc định</label>
            <input asp-for="IsSetDefault" style="width:25px;height:25px; margin-left:15px" />
            <span asp-validation-for="IsSetDefault" class="text-danger"></span>
        </div> 
        <div class="form-group" style="
            display: flex;
            align-items: center;
        ">
            <label asp-for="Active" class="control-label" style="margin-bottom:0px">Kích hoạt sử dụng</label>
            <input asp-for="Active" style="width:25px;height:25px; margin-left:15px" />
            <span asp-validation-for="Active" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Note" class="control-label">Ghi chú</label>
            <textarea asp-for="Note" class="form-control" placeholder="Ghi chú"></textarea>
        </div>
    </div>
</div>
