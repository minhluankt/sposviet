@{ }
@model Web.ManagerApplication.Areas.Admin.Models.ManageUserRolesViewModel
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/selling/users">< Trở lại danh sách nhân viên</a></li>
        <li class="breadcrumb-item active" aria-current="page">Cấu hình vai trò nhân viên</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header">
        <h5 class="mt-3">Họ tên:  @Model.Name (@Model.UserName)</h5>
    </div>
    <div id="viewAll" class="card-body table-responsive userrole">
        <form asp-controller="UserRole" method="post" asp-action="Update" asp-route-id="@Model.UserId" class="d-inline">
            <input asp-for="@Model.UserId" type="hidden" />
            <table class="table table-striped table-bordered" id="userRolesTable">
                <thead>
                    <tr>
                        <th>
                            Quyền nhân viên
                        </th>
                        <th>
                            Lựa chọn
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 0; i < Model.UserRoles.Count(); i++)
                    {
                        <tr>
                            <td>
                                <input asp-for="@Model.UserRoles[i].RoleName" type="hidden" />
                                @Model.UserRoles[i].RoleName
                            </td>
                            <td>
                                <div class="form-check m-1">
                                    <input asp-for="@Model.UserRoles[i].Selected" class="form-check-input" />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="col-sm-12" style=" padding: 20px 20px 0px 0px">
                <button type="submit" id="save" class="btn bg-success text-white">
                    <i class="fa fa-check"></i>
                    Save
                </button>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
<script>
    $(document).ready(function () {
        $("#userRolesTable").DataTable();
    });
</script>
}