                                        aria-hidden="true">
                                        <option></option>
                                    </select>
                                </div>


                                 
                                <div class="input-group group-select mb-3">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text" for="inputGroupSelect01">
                                              <i class="icon-cd icon-city"></i>
                                        </label>
                                    </div>
                                     <select class="custom-select select2-2" asp-for="IdDistrict"
                                        aria-hidden="true">
                                        <option></option>
                                    </select>
                                </div>



                                  
                                <div class="input-group group-select mb-3">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text" for="inputGroupSelect01">
                                              <i class="icon-cd icon-city"></i>
                                        </label>
                                    </div>
                                     <select class="custom-select select2-2" asp-for="IdWard"
                                        aria-hidden="true">
                                        <option></option>
                                    </select>
                                </div>



                                <div class="form-group">
                                    <div class="gr-input-icon">
                                        <i class="cd-map"></i>
                                        <input type="text" asp-for="Address" class="form-control" placeholder="Nhập địa chỉ ...">
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-info btn-block btn-round btn-log">Đăng ký</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    @section Scripts
    {
<script>
    $('#PhoneNumber').inputmask("(999) 999-9999");
    $().ready(function () {
       loadEventRegisterCustomer();
       eventValidateFormRegister("RegisterformShowinview");
    });
</script>
}
}




