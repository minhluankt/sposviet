

@using Domain.Entities
@model Banner
<form method="post" asp-controller="Banner" asp-area="Admin" asp-route-id="@Model.Id" asp-action="OnPostCreateOrEdit" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div class="row justify-content-center">
        <div class="col col-md-6">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label asp-for="Name" class="control-label">Chọn hình ảnh</label>
                 <div class="custom-file">
                                                            <input accept=".png,.jpg,.jpeg,.gif,.tif"
                                                                  name="Img" id="Img"
                                                                   type="file" class="custom-file-input"
                                                                   onchange="document.getElementById('imgCompany').src = window.URL.createObjectURL(this.files[0])"
                                                                   >
                                                            <label class="custom-file-label text-left" for="ImgUpload">Chọn ảnh đại diện</label>
                                                        </div>
                <span asp-validation-for="Name" class="text-danger"></span>
                <div style="padding:10px;width: max-content;border:#ccc solid thin;margin: auto;margin-top: 20px;max-width: 200px;max-height: 200px;">
                    <img id="imgCompany" class="mb-2 daidien" src="../images/img_back.png" style="width: 100%;">
                </div>
                 
            </div>
             <div class="form-group">
                                                    <label for="" asp-for="Name">Thứ tự hiển thị slide trang chủ </label>
                                                    <input type="text" asp-for="Sort" class="form-control" placeholder="Nhập tên bài BĐS" />
                                                </div>
            <div class="form-group justify-content-center" style="margin-bottom: 0px !important">
                <button class="ladda-button mr-2 btn btn-primary" data-style="expand-left">
                    <span class="ladda-label"><i class="fas fa-check"></i>  Lưu</span>
                    <span class="ladda-spinner"></span>
                </button>
                <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</form>
<script>
     $("#Img").on("change", function () {
         var fileName = $(this).val().split("\\").pop();
         $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
     });
</script>