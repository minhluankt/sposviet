@using Model
@model CustomerModelView
<style>
    .select2-container--open .select2-dropdown--below {

    border-top-right-radius: 8px;
}
</style>
@if (Model.RegisterPopup)
{
    <div class="modal fade" id="RegisterModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modelformcustome" role="document">
            <div class="modal-content">
                <div class="modal-header border-bottom-0">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-title text-center">
                        <h4>Đăng ký tài khoản</h4>
                    </div>
                    <div class="d-flex flex-column">
                        <form asp-controller="Account" asp-action="Register" method="post" id="Registerform">
                            @Html.HiddenFor(x=>x.LoginPopup)
                            <small>(Nhập đúng email để xác nhận tài khoản đăng ký)</small>
                            <div class="form-group">
                                <div class="gr-input-icon">
                                    <i class="cd-mail"></i>
                                    <input type="text" asp-for="Email" class="form-control" placeholder="Email bắt buộc để gửi thông báo * ...">
                                </div>
                            </div>

                            <div class="form-group">
                                <small>(Chỉ nhập chữ thường không viết hoa)</small>
                                <div class="gr-input-icon">
                                    <i class="cd-username"></i>
                                    <input type="text" asp-for="UserName" class="form-control" placeholder="Tên đăng nhập/Email * ...">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="gr-input-icon">
                                            <i class="cd-password"></i>
                                            <input type="password" asp-for="Password" class="form-control" placeholder="Nhập mật khẩu * ...">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="gr-input-icon">
                                            <i class="cd-password"></i>
                                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu *...">
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <h4 class="mb-4 mt-2">Thông tin cá nhân</h4>
                            <div class="form-group">
                                <div class="gr-input-icon">
                                    <i class="cd-username"></i>
                                    <input type="text" asp-for="Name" class="form-control" placeholder="Nhập họ và tên * ...">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="gr-input-icon">
                                    <i class="cd-phone"></i>
                                    <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Nhập số điện thoại liên hệ *...">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="gr-input-icon">
                                    <i class="cd-date"></i>
                                    <input autocomplete="off" type="text" data-inputmask-alias="datetime" asp-for="BirthDate" data-inputmask-inputformat="dd/mm/yyyy" class="form-control inputmask fc-datepicker" placeholder="Nhập ngày sinh ...">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="gr-input-icon">
                                    <i class="cd-map"></i>
                                    <input type="text" asp-for="Address" class="form-control" placeholder="Nhập địa chỉ ...">
                                </div>
                            </div>

                            <button type="button" class="btn btn-info btn-block btn-round btn-log">Đăng ký</button>

                        </form>


                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <div class="signup-section">Chú ý:  Thông tin Tên đăng nhập không thể thay đổi sau khi đăng ký.</div>
                </div>
            </div>

        </div>
    </div>

}
else
{
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-6 m-auto">
                <div class="row">
                    <div class="Registerform-view modelformcustome">
